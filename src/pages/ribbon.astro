---
import { Image } from 'astro:assets';
import dasPro from '../img/dasPro.png';
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/dist/output.css' />
    <title>Ribbon</title>
  </head>
  <body>
    <div class='min-h-screen p-8 bg-blue-500'>
      <div class='relative mx-auto bg-white shadow-xl rounded-xl h-80 w-80'>
        <!-- Top Right -->
        <div
          class='absolute overflow-hidden rounded-sm w-36 aspect-square -top-2 -right-2'
        >
          <div class='absolute top-0 left-0 w-2 h-2 bg-amber-500'></div>
          <div class='absolute bottom-0 right-0 w-2 h-2 bg-amber-500'></div>
          <a
            href=''
            class='bg-amber-300 text-amber-800 uppercase block w-square-diagonal absolute bottom-0 right-0 rotate-45 origin-bottom-right text-center font-bold py-1.5 tracking-wider text-xs shadow-sm hover:bg-yellow-300'
            >My cool ribbon</a
          >
        </div>
        <!-- Top Left -->
        <div
          class='absolute w-24 overflow-hidden rounded-sm aspect-square -top-2 -left-2'
        >
          <div class='absolute bottom-0 left-0 w-2 h-2 bg-green-500'></div>
          <div class='absolute top-0 right-0 w-2 h-2 bg-green-500'></div>
          <a
            href=''
            class='bg-green-300 text-amber-800 uppercase block w-square-diagonal absolute bottom-0 left-0 -rotate-45 origin-bottom-left text-center font-bold py-1.5 tracking-wider text-xs shadow-sm hover:bg-emerald-300'
            >Top Left</a
          >
        </div>
        <!-- Bottom Left -->
        <div
          class='absolute w-32 overflow-hidden rounded-sm aspect-square -bottom-2 -left-2'
        >
          <div class='absolute top-0 left-0 w-2 h-2 bg-purple-500'></div>
          <div class='absolute bottom-0 right-0 w-2 h-2 bg-purple-500'></div>
          <a
            href=''
            class='bg-purple-300 text-amber-800 uppercase block w-square-diagonal absolute top-0 left-0 rotate-45 origin-top-left text-center font-bold py-1.5 tracking-wider text-xs shadow-sm hover:bg-violet-300'
            >Bottom Left</a
          >
        </div>
        <!-- Bottom Right -->
        <div
          class='absolute w-24 overflow-hidden rounded-sm aspect-square -bottom-2 -right-2'
        >
          <div class='absolute top-0 right-0 w-2 h-2 bg-cyan-500'></div>
          <div class='absolute bottom-0 left-0 w-2 h-2 bg-cyan-500'></div>
          <a
            href='#'
            class='py-1.5 bg-cyan-300 text-cyan-800 font-semibold uppercase text-xs tracking-wider block w-square-diagonal text-center absolute top-0 right-0 -rotate-45 origin-top-right shadow-sm hover:bg-sky-300'
          >
            Bottom right
          </a>
        </div>
      </div>
      <!-- works section -->
    </div>
  </body>
</html>
