---
/* Prop Types */
export type RibbonProps = {
  position: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right';
  size: 'small' | 'medium' | 'large';
  color: 'amber' | 'green' | 'purple' | 'cyan';
};
/* Styles lookup */
const sizeClasses: Record<RibbonProps['size'], string> = {
  small: 'w-24',
  medium: 'w-28',
  large: 'w-36',
};

const {
  position = 'top-right',
  size = 'medium',
  color = 'amber',
} = Astro.props;
---

<div
  class={`${sizeClasses[size]} aspect-square absolute -top-2 -right-2 overflow-hidden rounded-sm`}
>
  <div class='absolute top-0 left-0 bg-amber-500 h-2 w-2'></div>
  <div class='absolute bottom-0 right-0 bg-amber-500 h-2 w-2'></div>
  <a
    href='#'
    class='py-1.5 bg-amber-300 text-amber-800 font-semibold uppercase text-xs tracking-wider block w-square-diagonal text-center absolute bottom-0 right-0 rotate-45 origin-bottom-right shadow-sm hover:bg-yellow-300'
  >
    <slot />
  </a>
</div>
